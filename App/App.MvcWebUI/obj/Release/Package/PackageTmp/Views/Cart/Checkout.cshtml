@model  App.MvcWebUI.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .validation-summary-errors {
        color: red;
    }

        .validation-summary-errors ul {
            list-style-type: none;
            padding-left: 0px;
        }


    .input-validation-error {
        border: 1px solid red;
    }
</style>

<div class="container" style="padding-top:150px;">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileri</h2>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i.UserName, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.UserName, new
                        {
                            @class = "form-control",
                            @Value = User.Identity.Name
                        })


                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i.AdresBaslik, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.AdresBaslik, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i.Adres, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.Adres, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i.Sehir, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.Sehir, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i.Semt, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.Semt, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i.Mahalle, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.Mahalle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i.PostaKod, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(i => i.PostaKod, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(i => i, new { @class = "col-form-label" })
                    </div>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>