
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="padding-top:100px;">
    <h2>Mesajınızı İletiniz..</h2>
    @if (ViewData["result"] != null)
    {
        if (ViewData["result"].ToString() == "true")
        {
            <div class="alert alert-success">Mesajınız başarılı şekilde iletildi.</div>
        }
        else
        {
            <div class="alert alert-danger">Beklenmeyen hata oluştu.</div>
        }
    }



    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label for="AdSoyad">Ad Soyad</label>
            <input type="text" class="form-control" id="AdSoyad" name="AdSoyad">
        </div>

        <div class="form-group">
            <label for="Email">Mail Adresi</label>
            <input type="text" class="form-control" id="Email" name="Email">
        </div>

        <div class="form-group">
            <label for="Konu">Konu</label>
            <input type="text" class="form-control" id="Konu" name="Konu">
        </div>

        <div class="form-group">
            <label for="Mesaj">Mesaj</label>
            <textarea class="form-control" id="Mesaj" name="Mesaj"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gönder</button>
    }
</div>

