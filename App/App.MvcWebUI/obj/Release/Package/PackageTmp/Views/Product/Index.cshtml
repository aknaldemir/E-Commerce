@model IEnumerable<App.MvcWebUI.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout="~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container"  style="padding-top:100px;">
    <h2>Ürünler</h2>
    <hr />
    <p>
        @Html.ActionLink("Yeni Ürün Ekle", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th style="width:134px;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Upload/@item.Image" width="80" alt="" />
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td class="text-center">
                    @if (item.IsApproved)
                    {
                        <i class="text-success fas fa-check-circle"></i>
                    }
                    else
                    {
                        <i class="text-danger fas fa-times-circle"></i>
                    }
                </td>
                <td class="text-center">
                    @if (item.IsHome)
                    {
                        <i class="text-success fas fa-check-circle"></i>
                    }
                    else
                    {
                <i class="text-danger fas fa-times-circle"></i>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id },new {@class="btn btn-primary btn-sm"})                   
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id },new {@class="btn btn-danger btn-sm"})
                </td>
            </tr>
        }

    </table>
</div>