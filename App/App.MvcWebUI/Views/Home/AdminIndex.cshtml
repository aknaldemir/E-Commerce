
@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container" style="padding-top:100px;">
    <h2 class="lead">Hoşgeldin, @User.Identity.Name</h2>
    <div class="row mt-5">
        
            <div class="col">                
                    <div class="card mb-3" style="width: 19rem;">
                        <div class="card-body">
                            <h5 class="card-title">Ürün Kontrol Paneli</h5>
                            <hr />
                            <p class="card-text">Ürün ekleme, güncelleme, silme ve listeleme işlemleri için bu paneli kullanınız.</p>
                            <a href="/Product/Index" class="btn btn-primary">Panele Git</a>
                        </div>
                    </div>             
            </div>
            <div class="col">
                <div class="card mb-3" style="width: 19rem;">
                    <div class="card-body">
                        <h5 class="card-title">Kategori Kontrol Paneli</h5>
                        <hr />
                        <p class="card-text">Kategori ekleme, güncelleme, silme ve listeleme işlemleri için bu paneli kullanınız.</p>
                        <a href="/Category/Index" class="btn btn-primary">Panele Git</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-3" style="width: 19rem;">
                    <div class="card-body">
                        <h5 class="card-title">Sipariş Kontrol Paneli</h5>
                        <hr />
                        <p style="height:72px;" class="card-text">Sipariş güncelleme ve listeleme işlemleri için bu paneli kullanınız.</p>
                        <a href="/Order/Index" class="btn btn-primary">Panele Git</a>
                    </div>
                </div>
            </div>

    </div>
</div>